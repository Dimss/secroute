cat <<EOF | cfssl genkey - | cfssljson -bare server
{
  "hosts": [
    "secroute.rhte-demo-webhooks.svc.cluster.local"
  ],
  "CN": "secroute.rhte-demo-webhooks.svc.cluster.local",
  "key": {
    "algo": "ecdsa",
    "size": 256
  }
}
EOF

cat <<EOF | kubectl apply -f -
apiVersion: certificates.k8s.io/v1beta1
kind: CertificateSigningRequest
metadata:
  name: secroute.rhte-demo-webhooks
spec:
  request: $(cat server.csr | base64 | tr -d '\n')
  usages:
  - digital signature
  - key encipherment
  - server auth
EOF

oc adm certificate approve secroute.rhte-demo-webhooks

kubectl get csr secroute.rhte-demo-webhooks -o jsonpath='{.status.certificate}